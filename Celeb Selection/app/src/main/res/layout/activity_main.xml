<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="?attr/actionModeSplitBackground"
            android:id="@+id/Celebrity" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitEnd"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="49dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Celebrity" android:layout_marginTop="32dp"
            android:orientation="horizontal">
        <RadioButton
                android:text="Thor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thor" android:layout_weight="1"
                android:onClick="onRadioClick"/>
        <RadioButton
                android:text="Captain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/captain" android:layout_weight="1"
                android:onClick="onRadioClick"/>
        <RadioButton
                android:text="IronMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ironMan" android:layout_weight="1"
                android:onClick="onRadioClick"/>
        <RadioButton
                android:text="WonderWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wonderWoman" android:layout_weight="1"
                android:onClick="onRadioClick"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>